{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "mock-server",
      "type": "shell",
      "command": "npm run mock-server:start",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",  
          "endsPattern": ".*"
        }
      }
    },
    {
      "label": "on-debugging",
      "dependsOn": ["mock-server"],
      "dependsOrder": "parallel"
    },
    {
      "label": "on-debugging-terminate",
      "command": "echo ${input:terminate}",
      "type": "shell",
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ]
}
