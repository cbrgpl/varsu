{
	"version": "0.2.0",
	"configurations": [

		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"outFiles": [
				"${workspaceRoot}/packages/vsc-extension/out/**/*.js",
				"${workspaceRoot}/packages/lsp-server/out/**/*.js"
			],
			"autoAttachChildProcesses": true,
			"env": {
        "VSCODE_DEBUG_MODE": "true",
				"VSCODE_LOG_LEVEL": "FULL"
      }
		},
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/packages/vsc-extension/out/test/index",
				"${workspaceRoot}/client/testFixture"
			],
			"outFiles": ["${workspaceRoot}packages/vsc-extension/out/test/**/*.js"]
		}
	]
}
